<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AddActivity">

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/ll_add1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_add_courseid"/>

            <EditText
                android:id="@+id/edit_cid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Course ID"
                android:maxLines="1"
                android:background="@null" />

            <Spinner
                android:id="@+id/spinner_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />

            <Button
                android:id="@+id/btn_findCourse"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_add_search"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_add2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_add_coursename"/>

            <EditText
                android:id="@+id/edit_cname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Course Name"
                android:background="@null" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGrey"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Course Detail:"
            android:textSize="18dp"
            android:textColor="@color/colorGrey" />

        <ListView
            android:id="@+id/lv_c_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp">
        </ListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </LinearLayout>







<!--******************************************************-->




    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="15dp"
        android:text="save"
        android:background="@drawable/bg_btn"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="cancelButton"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_save"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_btn"
        android:text="cancel"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="saveButton"/>



</RelativeLayout>
