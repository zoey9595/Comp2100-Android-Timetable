<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".GuideActivity">

    <ScrollView
        android:id="@+id/sv_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rl_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_guide_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/enrol_item_margin"
                android:gravity="center"
                android:text="@string/guide_title"
                android:textStyle="bold" />

            <!-- Calender page introduction -->
            <TextView
                android:id="@+id/tv_calender_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/enrol_item_margin"
                android:text="@string/guide_calender_title"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_calender"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_calender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_calender" />

                <TextView
                    android:id="@+id/tv_calender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/guide_calender_description" />
            </LinearLayout>

            <!-- Enroll page introduction -->
            <TextView
                android:id="@+id/tv_enrol_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/enrol_item_margin"
                android:text="@string/guide_enrol_title"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_enrol"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_enrol"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_enrol" />

                <TextView
                    android:id="@+id/tv_enrol"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/guide_enrol_list" />
            </LinearLayout>

            <!--Add page introduction-->
            <TextView
                android:id="@+id/tv_add_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/enrol_item_margin"
                android:text="@string/guide_add_title"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_add"
                android:layout_width="match_parent"
                android:layout_height="660dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_add" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/guide_add_list" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>